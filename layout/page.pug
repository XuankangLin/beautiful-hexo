extends partial/base

block header
    header.header-section
        .intro-header.no-img
            .page-heading
                h1!= page.title
                if page.subtitle
                    hr.small
                    span.page-subheading!= page.subtitle

block content
    main.container
        .row
            .col-lg-8.offset-lg-2.col-md-10.offset-md-1
                article.blog-post
                    != page.content

                include partial/comment
